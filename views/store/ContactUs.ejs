<%- include('../partials/Head') %>
<body class="bg-gray-100 text-gray-900">
  <%- include('../partials/Nav') %>

  <header class="mt-8 text-center">
    <h1 class="text-2xl font-semibold">
      Welcome on Contact Us
    </h1>
  </header>

  <main class="max-w-md mx-auto mt-6 bg-white p-6 rounded shadow">
    <form action="/user/contact-us" method="POST" class="space-y-4">

      <input
        name="name"
        placeholder="Please enter your name"
        type="text"
        class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
      />

      <textarea
        name="description"
        placeholder="Share your thoughts"
        class="w-full border border-gray-300 rounded px-3 py-2 h-28 resize-none focus:outline-none focus:ring-2 focus:ring-blue-500"
      ></textarea>

      <input
        type="submit"
        value="Send"
        class="w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700 cursor-pointer"
      />

    </form>
  </main>

</body>
</html>