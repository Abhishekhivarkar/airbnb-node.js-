<%- include('../partials/Head') %>

<body class="bg-gray-50 text-gray-900 min-h-screen">
  <%- include('../partials/Nav') %>

  <main class="max-w-6xl mx-auto px-6 py-16">

    <!-- Header -->
    <section class="text-center mb-12">
      <h1 class="text-4xl font-bold mb-3">
        Contact us
      </h1>
      <p class="text-gray-500 max-w-xl mx-auto">
        Have a question, feedback, or issue? We’d love to hear from you.
      </p>
    </section>

    <!-- Content -->
    <section class="grid grid-cols-1 md:grid-cols-2 gap-12 items-start">

      <!-- Info -->
      <div class="space-y-6">
        <div class="bg-white rounded-2xl shadow p-6">
          <h2 class="text-xl font-semibold mb-2">
            Why reach out?
          </h2>
          <ul class="text-gray-600 space-y-2 text-sm">
            <li>• Booking or payment issues</li>
            <li>• Hosting support</li>
            <li>• Feedback & feature requests</li>
          </ul>
        </div>

        <div class="bg-white rounded-2xl shadow p-6 text-sm text-gray-600">
          We usually respond within <span class="font-medium text-gray-900">24 hours</span>.
        </div>
      </div>

      <!-- Form -->
      <div class="bg-white rounded-3xl shadow-xl p-8">
        <form action="/user/contact-us" method="POST" class="space-y-5">

          <div>
            <label class="block text-sm font-medium mb-1">
              Your name
            </label>
            <input
              name="name"
              type="text"
              placeholder="Enter your name"
              class="input"
            />
          </div>

          <div>
            <label class="block text-sm font-medium mb-1">
              Message
            </label>
            <textarea
              name="description"
              placeholder="Tell us how we can help..."
              class="input h-32 resize-none"
            ></textarea>
          </div>

          <button
            type="submit"
            class="w-full bg-rose-500 text-white py-3 rounded-full font-semibold hover:bg-rose-600 transition"
          >
            Send message
          </button>

        </form>
      </div>

    </section>

  </main>

</body>
</html>