<%- include('../partials/Head') %>

<body class="bg-gray-50 text-gray-900 min-h-screen">
  <%- include('../partials/Nav') %>

  <main class="max-w-7xl mx-auto px-6 py-12">

    <!-- Header -->
    <div class="mb-10 text-center">
      <h1 class="text-4xl font-bold text-gray-900">
        My Bookings
      </h1>
      <p class="text-gray-500 mt-2">
        Homes you‚Äôve already reserved
      </p>
    </div>

    <!-- Empty State (optional but important UX) -->
    <% if (homeData.length === 0) { %>
      <div class="text-center text-gray-500 mt-20">
        No bookings yet.
      </div>
    <% } %>

    <!-- Cards Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">

      <% homeData.forEach((data) => { %>
        <div class="bg-white rounded-2xl shadow-md hover:shadow-xl transition overflow-hidden">

          <!-- Image -->
          <div class="h-48 bg-gray-200">
            <img
              class="w-full h-full object-cover"
              src="<%= data.homeUrl || '/Image/homeImage.jpeg' %>"
              alt="Booked home"
            />
          </div>

          <!-- Content -->
          <div class="p-5 space-y-3">
            <h2 class="text-lg font-semibold text-gray-900">
              <%= data.houseName %>
            </h2>

            <p class="text-sm text-gray-500">
              üìç <%= data.homeLocation %>
            </p>

            <div class="flex justify-between items-center pt-2">
              <div class="text-lg font-bold text-gray-900">
                ‚Çπ <%= data.homePrice %>
                <span class="text-sm font-normal text-gray-500">/ night</span>
              </div>

              <div class="text-yellow-500 font-medium text-sm">
                ‚≠ê <%= data.homeRatings %>
              </div>
            </div>

            <!-- Status -->
            <div class="pt-3">
              <span class="inline-block px-4 py-1 text-sm font-semibold rounded-full bg-green-100 text-green-700">
                Booked
              </span>
            </div>
          </div>

        </div>
      <% }) %>

    </div>

  </main>

</body>
</html>