<%- include('../partials/Head') %>

<body class="bg-gray-50 text-gray-900 min-h-screen">
  <%- include('../partials/Nav') %>

  <main class="max-w-7xl mx-auto px-6 py-12">

    <!-- Header -->
    <div class="mb-10 text-center">
      <h1 class="text-4xl font-bold text-gray-900">
        My bookings
      </h1>
      <p class="text-gray-500 mt-2">
        Places you‚Äôve already reserved
      </p>
    </div>

    <!-- Cards Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">

      <% homeData.forEach((data) => { %>
        <div class="bg-white rounded-2xl shadow-md hover:shadow-xl transition overflow-hidden">

          <!-- Image -->
          <div class="h-52 bg-gray-200">
            <img
              class="w-full h-full object-cover"
              src="<%= data.homeUrl || '/Image/homeImage.jpeg' %>"
              alt="Booked home"
            />
          </div>

          <!-- Content -->
          <div class="p-5 space-y-3">

            <h2 class="text-lg font-semibold text-gray-900 truncate">
              <%= data.houseName %>
            </h2>

            <p class="text-sm text-gray-500">
              üìç <%= data.homeLocation %>
            </p>

            <div class="flex justify-between items-center">
              <div class="text-lg font-bold text-gray-900">
                ‚Çπ <%= data.homePrice %>
                <span class="text-sm font-normal text-gray-500">/ night</span>
              </div>

              <div class="text-sm font-medium text-yellow-500">
                ‚≠ê <%= data.homeRatings %>
              </div>
            </div>

            <!-- Status + Actions -->
            <div class="flex items-center justify-between pt-3">

              <span class="px-4 py-1 text-sm font-semibold rounded-full bg-green-100 text-green-700">
                Booked
              </span>

              <a
                href="/home-details"
                class="text-sm font-medium text-rose-500 hover:text-rose-600 transition"
              >
                View details ‚Üí
              </a>

            </div>

          </div>
        </div>
      <% }) %>

    </div>

  </main>

</body>
</html>