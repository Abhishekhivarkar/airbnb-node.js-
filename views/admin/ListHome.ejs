<%- include('../partials/Head') %>

<body class="bg-gray-50 text-gray-900 min-h-screen">
  <%- include('../partials/Nav') %>

  <main class="max-w-7xl mx-auto px-6 py-12 space-y-16">

    <!-- ADD HOME SECTION -->
    <section class="max-w-xl mx-auto bg-white rounded-3xl shadow-xl p-8">
      <h1 class="text-3xl font-bold mb-2">
        Add your home
      </h1>
      <p class="text-gray-500 mb-6">
        Share your space and start earning.
      </p>

      <form action="/host/list-home" method="POST" class="space-y-4">
        <input name="houseName" type="text" placeholder="Home name" class="input" />
        <input name="homePrice" type="number" placeholder="Price per night (‚Çπ)" class="input" />
        <input name="homeLocation" type="text" placeholder="Location" class="input" />
        <input name="homeRatings" type="number" step="0.1" placeholder="Rating (0‚Äì5)" class="input" />
        <input name="homeUrl" type="text" placeholder="Image URL" class="input" />

        <button type="submit" class="w-full bg-rose-500 text-white py-3 rounded-full font-semibold hover:bg-rose-600 transition">
          Add Home
        </button>
      </form>
    </section>

    <!-- LISTINGS SECTION -->
    <section>
      <h2 class="text-2xl font-bold mb-6">
        Your listed homes
      </h2>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">

        <% homeData.forEach((homes) => { %>
          <div class="bg-white rounded-2xl shadow-md hover:shadow-xl transition overflow-hidden">

            <!-- Image -->
            <div class="h-48 w-full bg-gray-200">
              <img
                class="w-full h-full object-cover"
                src="<%= homes.homeUrl || '/Image/homeImage.jpeg' %>"
                alt="Home image"
              />
            </div>

            <!-- Content -->
            <div class="p-5 space-y-3">
              <h3 class="text-xl font-semibold">
                <%= homes.homeName %>
              </h3>

              <div class="flex justify-between text-sm text-gray-500">
                <span>üìç <%= homes.homeLocation %></span>
                <span class="text-yellow-500 font-medium">
                  ‚≠ê <%= homes.homeRating %>
                </span>
              </div>

              <div class="flex justify-between items-center pt-2">
                <div class="text-lg font-bold text-gray-900">
                  ‚Çπ <%= homes.homePrice %>
                  <span class="text-sm font-normal text-gray-500">/ night</span>
                </div>

                <div class="flex gap-2">
                  <button class="px-3 py-1 text-sm rounded-full bg-gray-100 hover:bg-gray-200">
                    Edit
                  </button>
                  <button class="px-3 py-1 text-sm rounded-full bg-red-100 text-red-600 hover:bg-red-200">
                    Delete
                  </button>
                </div>
              </div>
            </div>

          </div>
        <% }) %>

      </div>
    </section>

  </main>

</body>
</html>